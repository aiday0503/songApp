
<div class="row">
<div class="col-md-12">
<h3>Register</h3>
</div>
<div class="row">
<div class="col-md-8">
<form action="<%= register_path %>" method="post" class="form">
<div class="form-group">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</div>


<label for ="email"> Email: </label>
<input type="email" name="user[email]" id="email" class="form-control"></div>
<div class="form-group">


<label for ="password"> Password: </label>
<input type="password" name="user[password]" id="password" class="form-control"></div>
<div class="form-group">

<label for ="password_confirmation"> Password 
confirmation: </label>
<input type="password" name="user[password_confirmation]" id="ppassword_confirmation" class="form-control"></div>
<div class="form-group">

<button type="submit"> Register</button
</div>
</div>
</form>
</div>
</div>

